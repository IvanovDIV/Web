                    input.btn(type="button" value="Найти")
                    input.btn(type="reset" value="Сбросить фильтр")
    p
        details
            summary Сортировка
            form
                p Первый уровень:
                    select
                        each header in headers 
                            option= header
                    select
                        option По возрастанию
                        option По убыванию
                p Второй уровень:
                    select
                        each header in headers 
                            option= header
                    select
                        option По возрастанию
                        option По убыванию

                p Третий уровень:
                    select
                        each header in headers 
                            option= header
                    select
                        option По возрастанию
                        option По убыванию
                p
                    input.btn(type="button" value="Сортировать")
                    input.btn(type="reset" value="Сбросить настройки")
    p 
