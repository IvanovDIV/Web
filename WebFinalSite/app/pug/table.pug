block content
    p
        details
            summary Фильтр
            form
                p
                    label Марка: 
                        input.input(type="text")
                        br
                p
                    label Название: 
                        input.input(type="text")
                        br
                p
                    label Мощность двигателя: 
                        | от
                        input.input(type="number" min="1" max="1500" )
                        | до 
                        input.input(type="number" min="1" max="1500")
                        br
